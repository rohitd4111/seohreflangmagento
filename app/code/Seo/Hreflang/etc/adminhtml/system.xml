<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="seohreflang" translate="label" sortOrder="10">
            <label>SEO</label>
        </tab>
        <section id="seohreflangsection" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Hreflang</label>
            <tab>seohreflang</tab>
            <resource>Seo_Hreflang::hreflang_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="lang_code" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Website Language Code</label>
                    <comment>Example: en-us, en-gb</comment>
                </field>
            </group>
        </section>
    </system>
</config>